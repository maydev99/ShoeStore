<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="shoeName"
            type="String" />

        <variable
            name="shoeCompany"
            type="String" />

        <variable
            name="shoeSize"
            type="String" />

        <variable
            name="shoeDescription"
            type="String" />

        <variable
            name="shoeImage"
            type="String" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="10dp"
        android:id="@+id/card_container"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_image_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_of_shoe"
                android:scaleType="centerCrop"
                android:src="@drawable/shoe" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="?attr/colorPrimary"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:id="@+id/item_shoe_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@={shoeName}"
                    tools:text="Shoe Name" />

                <TextView
                    android:id="@+id/item_company_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@={shoeCompany}"
                    tools:text="Company Name" />

                <TextView
                    android:id="@+id/item_size_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@={shoeSize}"
                    tools:text="Size" />

                <TextView
                    android:id="@+id/item_description_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@={shoeDescription}"
                    tools:text="Description" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</layout>